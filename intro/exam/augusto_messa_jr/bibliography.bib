issn = {1756-3305},
journal = {Parasites {\&} Vectors},
keywords = {Assemblage,Genotyping,Giardia duodenalis,Giardiasis,MLG,Molecular epidemiology,Multi-locus genotype,United Kingdom},
mendeley-groups = {Monografia Licenciatura},
number = {1},
pages = {444},
pmid = {26338670},
publisher = {Parasites {\&} Vectors},
title = {{Determination of Giardia duodenalis assemblages and multi-locus genotypes in patients with sporadic giardiasis from England.}},
